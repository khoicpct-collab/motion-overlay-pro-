{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "."
      }
    }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/(.*\\.(css|js))$",
      "dest": "/$1",
      "headers": {
        "cache-control": "public, max-age=604800"
      }
    },
    {
      "src": "^(?:/(.*))?$",
      "dest": "/index.html"
    }
  ]
}
